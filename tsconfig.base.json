{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@angular-three/core": ["packages/core/src/index.ts"],
      "@angular-three/core/audio": ["packages/core/audio/src/index.ts"],
      "@angular-three/core/camera": ["packages/core/camera/src/index.ts"],
      "@angular-three/core/group": ["packages/core/group/src/index.ts"],
      "@angular-three/core/lod": ["packages/core/lod/src/index.ts"],
      "@angular-three/core/mesh": ["packages/core/mesh/src/index.ts"],
      "@angular-three/core/points": ["packages/core/points/src/index.ts"],
      "@angular-three/core/scene": ["packages/core/scene/src/index.ts"],
      "@angular-three/core/stats": ["packages/core/stats/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
